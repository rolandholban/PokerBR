<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Session #:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="1"
            android:text="Date:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="2"
            android:text="Big Blind:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="3"
            android:text="Start Time:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="4"
            android:text="End Time:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="5"
            android:text="Start Chips:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="6"
            android:text="End Chips:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSessionId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:text="4"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="1"
            android:text="12/12/2015"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvBigBlind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="2"
            android:text="$2"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="3"
            android:text="12:30"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="4"
            android:text="16:30"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvStartChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="5"
            android:text="$300"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tvEndChips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="6"
            android:text="$600"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="7"
            android:text="--------------------------" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="7"
            android:text="---------------" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="8"
            android:text="Profit:"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="9"
            android:text="Length:"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="10"
            android:text="ROI:"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_row="11"
            android:text="$/Hour:"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalProfit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="8"
            android:text="$455"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="9"
            android:text="4:30"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvROI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="10"
            android:text="217%"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvMoneyPerHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_row="11"
            android:text="$117"
            android:textSize="30sp" />

    </GridLayout>

</LinearLayout>
